<h1>New Product</h1>

<%= form_with model: @product do |form| %>
  <div>
    <%= form.label :product_type %><br>
    <%= form.text_field :product_type %>
    <% @product.errors.full_messages_for(:product_type).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :price %><br>
    <%= form.text_area :price %><br>
    <% @product.errors.full_messages_for(:price).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

 <div class=”field”> (Upload your new profile picture below!)
    <%= form.label :image %>
    <%= form.file_field :image %>
  </div>
  <div>
    <%= form.label :user_id %><br>
    <%#= collection_select(:product,:user_id,User.all,:id,:email)%>
    <%#= select_tag 'user_id', options_for_select(@users.collect{ |c| [ c.id]}) %>
   <%#= form.select :user_id, @users.collect { |c| [ c.name] } %>
  </div>

    
    <% @product.errors.full_messages_for(:user_id).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>


  <div>
    <%= form.submit %>
  </div>
<% end %>
