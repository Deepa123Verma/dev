 <h2>All Products</h2>

 <% @products.each do |product| %>
   <p>product_type: <%= product.product_type %>; unit price of <%= number_to_currency(product.price) %></p>
   <p>
    <% if product.image.present? %>
    <p> <%= image_tag product.image,:size => "100x100" %> </p>
  <% end %>
     <%= link_to "Edit", edit_product_path(product) %>
     <%= button_to "Delete", delete_products_path(product),method: :get%>
     <%= button_to "Add #{product.product_type} to cart", line_items_path(:product_id => product.id) %>
   </p>
 <% end%>
 
 <%= link_to "New product", new_product_path %>